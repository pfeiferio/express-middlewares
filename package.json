{
  "type": "module",
  "name": "@pfeiferio/express-middlewares",
  "version": "1.2.0",
  "author": "Pascal Pfeifer <pascal@pfeifer.zone>",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "description": "Reusable and production-ready middlewares for Express applications.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "express",
    "middleware",
    "logging",
    "morgan",
    "access-log",
    "body-parser",
    "multer",
    "graceful-shutdown",
    "sigint",
    "sigterm",
    "abort-signal"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pfeiferio/express-middlewares.git"
  },
  "bugs": {
    "url": "https://github.com/pfeiferio/express-middlewares/issues"
  },
  "homepage": "https://github.com/pfeiferio/express-middlewares#readme",
  "peerDependencies": {
    "express": "^5",
    "multer": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "multer": {
      "optional": true
    }
  },
  "dependencies": {
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.3.2",
    "express": "^5.2.1",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepublishOnly": "npm test",
    "build": "npm run clean && tsc",
    "clean": "rm -rf dist",
    "test": "npm run build && node --test",
    "test:coverage": "npm run build && node --test --experimental-test-coverage --test-coverage-exclude='test/**'",
    "test:coverage:c8": "npm run build && npx c8 node --test",
    "test:coverage:lcov": "npm run build && npx c8 --src src node --enable-source-maps --test"
  }
}
